<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>
        <%=__(store)%>|
            <%=__(title)%>
    </title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <div class="modal hide fade" id="modal">
        <div class="modal-dialog">
        </div>
    </div>
    <header class="navbar navbar-static-top navbar-default">
        <ul class="nav navbar-nav">
            <li>
                <a href="/">
                    <%=__( 'Home')%>
                </a>
            </li>
            <li>
                <a href="/about">
                    <%=__( 'About')%>
                </a>
            </li>
            <li>
                <a href="/contact">
                    <%=__( 'Contact')%>
                </a>
            </li>
            <%if (!locals.logged){%>
                <li>
                    <a href="/modals/register" data-toggle="modal" data-target="#modal">
                        <%=__( 'Register')%>
                    </a>
                </li>
                <li>
                    <a href="/modals/login" data-toggle="modal" data-target="#modal">
                        <%=__( 'Login')%>
                    </a>
                </li>
                <%}else{%>
                    <li>
                        <a href="/account/home">
                            <%=__( 'Account')%>
                        </a>
                    </li>
                    <li>
                        <a href="/account/logout">
                            <%=__( 'Logout')%>
                        </a>
                    </li>
                    <%}%>
        </ul>
        <div id="cart navbar-right navbar-form">
            <%- partial( "cart/cart")%>
        </div>
    </header>
    <main class="container">
        <a href="/">
            <img src="/img/style/header.png" alt="<%=__(store)%>|<%=__(title)%>">
        </a>
        <nav class="navbar navbar-default">
            <form action="" class="navbar-form navbar-right" role="search">
                <div class="form-group">
                    <input type="search" class="form-control" placeholder="<%=__('Search')%>">
                </div>
            </form>
            <ul class="nav navbar-nav">
                <%categories.forEach(function(category){%>
                    <li>
                        <a href="/category/<%=category.seo%>">
                            <%=category.name%>
                        </a>
                    </li>
                    <%})%>
            </ul>
        </nav>
        <%- body%>
    </main>
    <script src="http://code.jquery.com/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/js/controller/main.js"></script>
    <%-blocks.scripts%>
</body>

</html>