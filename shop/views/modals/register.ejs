<div class="modal-header">
    <a href="" class="close" data-dismiss="modal">&times;</a>
    <h3>
        <%= __( "Register") %>
    </h3>
</div>
<div class="modal-body">
    <form action="/account/register" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="document">
                <%= __( "Document") %>
            </label>
            <input type="text" name="document" placeholder="<%= __('Document')%>" id="document" class="form-control document">
        </div>
        <div class="form-group">
            <label for="name">
                <%= __( "First Name") %>
            </label>
            <input type="text" name="name.first" placeholder="<%= __('First Name')%>" id="name" class="form-control">
        </div>
        <div class="form-group">
            <label for="lastName">
                <%= __( "Last Name") %>
            </label>
            <input type="text" name="name.last" placeholder="<%= __('Last Name')%>" id="lastName" class="form-control">
        </div>
        <div class="form-group">
            <label for="email">
                <%= __( "Email Address") %>
            </label>
            <input type="text" name="email" placeholder="<%= __('Email Address')%>" id="email" class="form-control">
        </div>
        <div class="form-group">
            <label for="password">
                <%= __( "Password") %>
            </label>
            <input type="password" name="password" id="password" placeholder="<%= __('Password')%>" id="password">
        </div>
        <div class="form-group">
            <label for="passwordConf">
                <%= __( "Confirm Password") %>
            </label>
            <input type="password" name="passwordConf" id="passwordConf" placeholder="<%= __('Confirm Password')%>" id="password">
        </div>
    </form>
</div>
<div class="modal-footer">
    <a href="javascript:" class="btn btn-link"><%= __("Remember password") %></a>
    <a href="javascript:" class="btn btn-link"><%= __("Register")%></a>
    <a href="javascript:" class="btn" data-dismiss="modal">
        <%= __( "Close") %>
    </a>
    <a href="javascript:$('.modal-body > form').submit();" class="btn btn-primary">
        <%= __( "Log in") %>
    </a>
</div>