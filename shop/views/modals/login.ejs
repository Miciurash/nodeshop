<div class="modal-content">
    <header class="modal-header">
        <a href="" class="close" data-dismiss="modal">&times;</a>
        <h3>
            <%=__( "Log in") %>
        </h3>
    </header>
    <main class="modal-body">
        <form action="/account/login" method="post" class="form-horizontal">
            <div class="form-group">
                <label for="email">
                    <%=__( "Email Address") %>
                </label>
                <input type="text" name="email" placeholder="<%= __('Email Address')%>" id="email" class="form-control">
            </div>
            <div class="form-group">
                <label for="password">
                    <%=__( "Password") %>
                </label>
                <input type="password" name="password" id="password" placeholder="<%= __('Password')%>" id="password">
            </div>
        </form>
    </main>
    <footer class="modal-footer">
        <a href="javascript:" class="btn btn-link">
            <%=__( "Remember password") %>
        </a>
        <a href="javascript:" class="btn btn-link">
            <%=__( "Register")%>
        </a>
        <a href="javascript:" class="btn" data-dismiss="modal">
            <%=__( "Close") %>
        </a>
        <a href="javascript:$('.modal-body > form').submit();" class="btn btn-primary">
            <%=__( "Log in") %>
        </a>
    </footer>
</div>